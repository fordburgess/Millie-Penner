<link href="https://fonts.googleapis.com/css2?family=Stalinist+One&display=swap" rel="stylesheet">
<link href="https://fonts.cdnfonts.com/css/sudo-var" rel="stylesheet">
<%= stylesheet_link_tag 'jewelry_index.css' %>
<div class="w-screen h-screen relative" style="background-color: #FFEE9C;"> 
  <section class="w-screen h-[30vh] flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-6xl" style="color: #F48BFE; font-family: Stalinist One">Jewellery</h1>
      <p class="text-lg" style="font-family: sudo var">Here is some jewelry I've made by hand, guaranteed to pull some serious pussy.</p>
    </div>
  </section>
  <section class="w-full px-24" style="display: flex; flex-wrap: wrap;">
    <% @jewelry_items.each_with_index do |item, index| %>
        <%= link_to "/jewelry_items/#{item.id}", class: "w-1/2 lg:w-1/3" do %>
          <div class="jewelry-item" id="<%= index.even? ? 'even' : 'odd' %>">
            <h1 class="text-xl"><%= item.title %></h1>
            <%= image_tag "ring.jpeg", style: "height: 50%; width: 50%" %>
            <p>Â£<%= sprintf('%.2f', item.price) %></p>
          </div>
        <% end %>
    <% end %>
  </section>
</div>
