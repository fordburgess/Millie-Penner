<div class="h-screen w-screen flex flex-col justify-center items-center py-20" style="background-image: url('<%= image_url('star-bg.jpeg')%>');">
  <h1 class="text-5xl text-pink-600 mb-20 font-kameron">Welcome back, Millie</h1>
  <div class="flex w-1/2 justify-between">
    <%= image_tag "sexy-neon-lady.gif", style: "height: 20rem; width: 5rem" %>
    <section class="flex flex-col w-2/3 items-center text-white">      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>  
          <div class="field font-kameron mb-4">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-transparent" %>
          </div>
      
          <div class="field font-kameron mb-4">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "bg-transparent" %>
          </div>

          <div class="field text-center">
            <%= f.submit "Log in", class: "text-2xl font-kameron mb-6 underline hover:cursor-pointer" %>
          </div>
      <% end %>      
    </section>
    <%= image_tag "sexy-neon-lady.gif", style: "height: 20rem; width: 5rem" %>
  </div>
</div>
