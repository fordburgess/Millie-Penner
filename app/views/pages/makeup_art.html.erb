<style>
    body {
        overflow-y: scroll;        
    }

    #mua-container {
        background: url('<%= image_url('makeup-art-bg.webp')%>');
        background-position: top center;
        background-size: cover;
        width: 100vw;
    }

    .mobile-video {
        display: block;
        width: 75%;
        height: auto;
    }

    .desktop-video {
        display: none;
    }

    .title {
        display: none;
    }

    @media (min-width: 1024px) {
        .desktop-video {
            display: block;
        }

        .mobile-video {
            display: none;
        }

        .title {
            display: block;
        }
    }
</style>

  <div id="mua-container" class="w-full flex flex-col justify-center items-center pt-96 lg:pt-[53vh] pb-28">
    <section class="font-playfair title">
        <h1 class="text-4xl text-center mb-24">Press spacebar to pause on a look. Press again to continue slides.</h1>
    </section>
    <%= video_tag "FacesMUA.mov", class: "desktop-video", size: "400x930", autoplay: true, muted: true, loop: :loop, id: 'makeup-video', style: 'margin-bottom: 8rem;' %>
    <%= image_tag "FacesMUA.gif", class: "mobile-video", style: 'margin-bottom: 8rem; height: 550px; width: 80%;' %>
    <%= image_tag "makeup-gif.gif", style: "height: 22rem; width: 14rem" %>   
  </div>

<script>
    window.onload = function () {
        var makeupVideo = document.getElementById("makeup-video");
        var makeupVideoMobile = document.querySelector('.mobile-video');
  
        window.addEventListener("click", function () {            
            if (makeupVideo.paused == true) {
                makeupVideo.play();
            } else {
                makeupVideo.pause();
            }

            if (makeupVideoMobile.paused == true) {
                makeupVideoMobile.play();
            } else {
                makeupVideoMobile.pause();
            }
        });

        window.addEventListener("keydown", function (e) {
            if (e.keyCode == 32) {
                e.preventDefault();

                if (makeupVideo.paused == true) {
                    makeupVideo.play();
                } else {
                    makeupVideo.pause();
                }
            }
        })
    }
</script>