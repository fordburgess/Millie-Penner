<style>
    .header-images {
        display: none;
    }

    @media (min-width: 1024px) {
        .header-images {
            display: block;
        }
    }
</style>

<link href="https://fonts.googleapis.com/css2?family=UnifrakturCook:wght@700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Uncial+Antiqua&display=swap" rel="stylesheet">
<div class="w-screen h-screen py-16 lg:py-20" style="background-image: url('<%= image_url('newspaper-bg.webp')%>'); background-size: cover;"> 
<section class="w-full px-8 lg:px-20 text-center">
    <div class="flex justify-center lg:justify-between pb-4 lg:pb-8 mb-2 items-end" style="border-bottom: solid 6px #000000"> 
        <div class="header-images" style="height: 30px; width: 30px; background-color: #B02E14; border-radius: 50px;"></div>
        <%= image_tag "blue-diamond.png", class: "header-images", style: "height: 80px; width: 80px;" %>
        <%= image_tag "pink-diamond.png", class: "header-images", style: "height: 120px; width: 120px;" %>
        <h1 class="text-5xl lg:text-9xl" style="font-family: UnifrakturCook;">Jewellery Art</h1>        
        <%= image_tag "pink-diamond.png", class: "header-images", style: "height: 120px; width: 120px;" %>
        <%= image_tag "blue-diamond.png", class: "header-images", style: "height: 80px; width: 80px;" %>
        <div class="header-images" style="height: 30px; width: 30px; background-color: #B02E14; border-radius: 50px;"></div>
    </div>
    <div class="flex justify-between">
        <p class="text-md lg:text-3xl" style="font-family: UnifrakturCook">All hand-sourced materials</p>
        <p class="text-md lg:text-3xl" style="font-family: UnifrakturCook">...and illustrated charms</p>
    </div>
    <%= link_to jewelry_items_path do %>
        <div class="inline-block p-8" style="background-color: #EA6BFF; border-radius: 50%;">
            <p class="text-md lg:text-2xl" style="font-family: Uncial Antiqua; color: #B2FFE3">Click here to visit the Jewellery Shop</p>
        </div>
    <% end %>
</section>

</div>