<div>
    <%= image_tag "cart.png", id: "cart-icon", class: "h-8 w-8 hover:cursor-pointer", style: "z-index: 30; position: absolute; top: 10px; right: 10px;" %>
    <div id="sidebar-container" class="h-screen w-screen bg-black bg-opacity-50 absolute top-0 right-0" style="display: none; z-index: 50">
        <div id="cart-sidebar" class="h-screen w-[25vw] absolute right-0 bg-zinc-800">
            <h1 class="font-lexendZetta text-3xl font-bold text-white">My Cart</h1>
        </div>
    </div>
</div>

<script type="text/javascript">
    document.addEventListener('turbo:load', () => {
        var cartIcon = document.getElementById("cart-icon");
        var cartSidebarContainer = document.getElementById("sidebar-container");
    
        cartIcon.addEventListener('click', () => {
            if (cartSidebarContainer.style.display == 'none') {
                cartSidebarContainer.style.display = 'block';
                cartSidebarContainer.addEventListener('click', (e) => {
                    if (!e.target.id.includes("cart-sidebar")) {
                        cartSidebarContainer.style.display = 'none';
                    }
                })
            }                       
        })
    })
</script>
