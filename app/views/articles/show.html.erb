<link href="https://fonts.cdnfonts.com/css/porter-sans-block" rel="stylesheet">
<style type="text/css">
  .desktop-link {
    display: none;
  }

  .mobile-link {
    display: block;
  }

  @media (min-width: 1024px) {
    .desktop-link {
      display: block;
    }

    .mobile-link {
      display: none;
    }
  }
</style>
<div class="h-auto w-screen py-16 px-8" style="background-color: #<%= @article.background_color %>;">
  <%= link_to "Back to Articles ->", articles_path,  class: "desktop-link", style: "color: ##{ @article.accent_color }; font-family: Porter Sans Block; position: fixed; top: 40px; right: 20px;" %>
  <%= link_to "Back ->", articles_path, class: "mobile-link", style: "color: ##{ @article.accent_color }; font-family: Porter Sans Block; position: fixed; top: 40px; right: 20px;" %>
  <section class="w-full lg:w-3/4" style="color: #<%= @article.accent_color %>; word-wrap: break-word;">
    <h1 class="text-3xl lg:text-7xl mb-4" style="font-family: Porter Sans Block"><%= @article.title %></h1>
    <h2 class="text-2xl lg:text-3xl mb-4" style="font-family: Porter Sans Block"><%= @article.subtitle %></h2>
    <h5 class="text-xl lg:text-1xl mb-8" style="font-family: Porter Sans Block"><%= @article.author %></h5>
  </section>
  <section class="article-content w-full lg:w-3/4" style="color: #<%= @article.accent_color %>; font-family: Times New Roman; font-size: 1.2rem;">
    <%= @article.content %>
  </section>
  <section class="w-full text-center" style="font-family: Times New Roman">
    <p class="text-red-400 text-xl">Fin</p>
  </section>
</div>