<%= stylesheet_link_tag 'zine_latest.css' %>
<div class="container w-full flex flex-col items-center lg:flex-row mb-12 bg-red-200">
    <% if zines.find { |item| item[:title] == "FRIEND APPLICATION Vol.1" } %>
        <% zine_vol_one = zines.find { |item| item[:title] == "FRIEND APPLICATION Vol.1" } %>
        <div class="w-full mb-12 lg:mb-0 lg:w-1/3 lg:h-full">
            <a href="<%= zine_path(zine_vol_one) %>" class="w-full h-full flex flex-col items-center justify-end">
                <%= image_tag zine_vol_one.cover_image, style: "height: 25rem; width: 17rem" %>
                <h1 class="font-kameron text-xl">Vol. 1</h1>        
            </a>
        </div>
    <% end %>
    <% if zines.find { |item| item[:title] == "FRIEND APPLICATION Vol.3" } %>
        <div class="w-full mb-12 lg:mb-0 lg:w-1/3 lg:h-full">
        <% zine_vol_three = zines.find { |item| item[:title] == "FRIEND APPLICATION Vol.3" } %>
            <a href="<%= zine_path(zine_vol_three) %>" class="w-full flex h-full flex-col justify-start items-center bg-red-200">
                <%= image_tag zine_vol_three.cover_image, style: "height: 28rem; width: 20rem" %>
                <h1 class="font-kameron text-xl">Vol. 2</h1>
            </a>
        </div>
    <% end %>
    <% if zines.find { |item| item[:title] == "FRIEND APPLICATION Vol.2" } %>        
        <div class="w-full mb-12 lg:mb-0 lg:w-1/3 lg:h-full">
            <% zine_vol_two = zines.find { |item| item[:title] == "FRIEND APPLICATION Vol.2" } %>
            <a href="<%= zine_path(zine_vol_two) %>" class="w-full h-full flex flex-col justify-end items-center">
                <%= image_tag zine_vol_two.cover_image, style: "height: 20rem; width: 20rem" %>
                <h1 class="font-kameron text-xl">Vol. 3</h1>
            </a>
        </div>
    <% end %>
</div>