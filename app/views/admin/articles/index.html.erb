<div class="w-screen h-screen" style="background-image: url('<%= image_url('star-bg.jpeg')%>');">
    <section class="px-20 h-full flex-col text-white">
        <div class="h-1/5 flex items-center">
            <h1 class="font-lexendZetta text-white text-3xl mr-8">All Articles</h1>
            <%= link_to "Back to dashboard", admin_root_path, class: "underline font-windowsRegular" %>
        </div>
        <div class="w-full h-4/5 flex flex-wrap text-white font-kameron overflow-y-scroll box-border">
            <% @articles.each do |article| %>
                <div class="w-1/3 mb-8">
                    <%= image_tag article.cover_photo.attached? ? article.cover_photo : "placeholder-image.webp", class: "h-80 w-[98%] lg:w-[75%] object-cover mb-4" %>
                    <h1 class="text-3xl font-kameron"><%= article.title %></h1>
                    <h2 class="text-xl font-kameron"><%= article.author %></h2>
                    <p class="mb-4"><%= article.created_at.strftime('%b %d, %Y') %></p>
                    <div class="flex">
                        <%= link_to "Edit Article", edit_admin_article_path(article), class: "classic-button-1 mr-4" %>
                        <%= link_to "View", "/articles/#{article.id}", class: "classic-button-1 mr-4" %>
                        <%= button_to "Delete Article", admin_article_path(article), method: :delete, class: "underline text-white font-windowsRegular" %>
                    </div>
                </div>
            <% end %>
        </div>
    </section>
</div>
